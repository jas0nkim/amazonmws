{
    "name": "automationJ",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "automationJ - ATOE automations",
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" 
    },
    "browser_action": {
        "default_icon": "images/icon19.png",
        "default_title": "automationJ"
    },
    "background": {
        "scripts": [
            "js/components/JSON-js/json2.js",
            "js/components/jquery/dist/jquery.min.js",
            "js/background/eventPage.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        /**
         *
         * AutomationJ
         *
         **/
        {
            "matches": [ "http://45.79.183.134:*/*", "https://45.79.183.134:*/*" ],
            "css":[
                "js/components/bootstrap/css/bootstrap.min.css"
            ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/underscore/underscore-min.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/components/bootstrap/js/bootstrap.min.js"
            ],
            "run_at": "document_end"
        },
        /**
         *
         * Amazon
         *
         **/
        {
            "matches": [
                "https://*.amazon.com/*"
            ],
            "exclude_matches": [
                "*://*/*gp/aw/ya*",
                "*://*/*gp/your-account/ship-track*"
            ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazon/ordering.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ 
                // "https://*.amazon.com/gp/aw/ya/*aj=tracking*",
                "https://*.amazon.com/gp/your-account/order-history/?search=*aj=tracking*",
                "https://*.amazon.com/gp/your-account/ship-track/*"
            ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazon/tracking.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ 
                // "https://*.amazon.com/gp/aw/ya/*aj=feedback*"
                "https://*.amazon.com/gp/your-account/order-history/?search=*aj=feedback*"
            ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazon/feedback.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.amazon.com/gp/your-account/order-history/?search=*aj=returnrequesting*",
                "https://*.amazon.com/returns/order/*",
                "https://*.amazon.com/returns/resolution/*",
                "https://*.amazon.com/returns/resolution/*",
                "https://*.amazon.com/returns/method/*",
                "https://*.amazon.com/returns/confirmation/*"
            ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazon/returnrequesting.js"
            ],
            "run_at": "document_end"
        }
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "activeTab",
        "tabs",
        // "http://45.79.183.134:8091/",
        // "https://45.79.183.134:8091/",
        "http://*/",
        "https://*/"
    ]
}