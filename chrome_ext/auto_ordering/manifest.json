{
    "name": "automationJ",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "automationJ - ATOE automations",
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" 
    },
    "browser_action": {
        "default_icon": "images/icon19.png",
        "default_title": "automationJ"
    },
    "background": {
        "scripts": [
            "js/components/JSON-js/json2.js",
            "js/components/jquery/dist/jquery.min.js",
            "js/background/eventPage.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [ "http://45.79.183.134:*/*", "https://45.79.183.134:*/*" ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/underscore/underscore-min.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/automationj.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ "http://*.amazon.com/*", "https://*.amazon.com/*" ],
            "js": [
                // "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazonItemOrdering.js"
            ],
            "run_at": "document_end"
        }
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "activeTab",
        "tabs",
        // "http://45.79.183.134:8091/",
        // "https://45.79.183.134:8091/",
        "http://*/",
        "https://*/"
    ]
}