{
    "name": "automationJ",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "automationJ - ATOE automations",
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" 
    },
    "browser_action": {
        "default_icon": "images/icon19.png",
        "default_title": "automationJ"
    },
    "background": {
        "scripts": [ "js/eventPage.js" ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [ "http://*/*", "https://*/*" ],
            "js": [
                "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/orderlist.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ "http://*.amazon.com/*", "https://*.amazon.com/*" ],
            "js": [
                "js/components/JSON-js/json2.js",
                "js/components/jquery/dist/jquery.min.js",
                "js/contentscripts/amazonitem.js"
            ],
            "run_at": "document_end"
        }
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ]
}